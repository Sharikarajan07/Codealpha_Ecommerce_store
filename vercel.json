{
  "version": 2,
  "builds": [
    {
      "src": "ecommerce_store/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "ecommerce_store/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "ecommerce_store.settings_production"
  },
  "functions": {
    "ecommerce_store/wsgi.py": {
      "includeFiles": "**"
    }
  }
}
