# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
DJANGO_SETTINGS_MODULE=ecommerce_store.settings_production

# Database (for production with PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Custom Domain (optional) - Replace with your actual domain
CUSTOM_DOMAIN=yourdomain.com

# Render-specific (automatically set by Render)
RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com

# Superuser creation (optional)
CREATE_SUPERUSER=true
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=secure-password-here

# Logging
DJANGO_LOG_LEVEL=INFO

# Security (for HTTPS deployment)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
